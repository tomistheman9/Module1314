<div class="container">
  <h1 class="text-center">Edit Address</h1>
  <%= form_with model: @address, url: address_path(@address), method: :patch do |form| %>
    <table class="table table-bordered">
      <tr>
        <th><%= form.label :street_address %></th>
        <td><%= form.text_field :street_address, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :city %></th>
        <td><%= form.text_field :city, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :postal_code %></th>
        <td><%= form.text_field :postal_code, class: "form-control" %></td>
      </tr>
    </table>

    <div class="buttons d-flex justify-content-start">
      <%= form.button type: :submit, class: "btn btn-primary me-3" do %>
        <i class="fas fa-sync-alt me-2"></i>Update Address
      <% end %>
      <%= link_to address_path(@address), class: "btn btn-secondary me-3" do %>
        <i class="fa fa-eye me-2"></i>Show
      <% end %>
      <%= link_to addresses_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-reply me-2"></i>Back
      <% end %>
    </div>
  <% end %>
</div>
