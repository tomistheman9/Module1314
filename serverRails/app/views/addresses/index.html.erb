<div class="container">
  <h1 class="text-center">Addresses</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Street Address</th>
      <th>City</th>
      <th>Postal Code</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_address %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td>
          <%= link_to address_path(address), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>Show
          <% end %>
          <%= link_to edit_address_path(address), class: "btn btn-warning" do %>
            <i class="fa fa-pencil"></i>Edit
          <% end %>
          <%= link_to address_path(address), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_address_path, class: "btn btn-success" do %>
    <i class="fas fa-plus-circle"></i>New Address
  <% end %>
</div>
