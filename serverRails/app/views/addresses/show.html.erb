<div class="container">
  <table class="table table-bordered">
    <tr>
      <th>Address</th>
      <td><%= @address.full_address %></td>
    </tr>
  </table>

  <div class="buttons">
    <%= link_to edit_address_path(@address), class: "btn btn-primary" do %>
      <i class="fa fa-pencil"></i>Edit
    <% end %>
    |
    <%= link_to addresses_path, class: "btn btn-secondary" do %>
      <i class="fa-solid fa-reply"></i>Back
    <% end %>
  </div>
</div>
