<div class="container">
  <h1 class="text-center">Edit <%= @employee.user.name %></h1>
  <%= form_with model: @employee, url: employee_path(@employee), method: :patch do |form| %>
    <table class="table table-bordered">
      <tr>
        <th><%= form.label :user_id %></th>
        <td><%= form.collection_select :user_id, User.all, :id, :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :address_id %></th>
        <td><%= form.collection_select :address_id, Address.all, :id, :street_address, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :phone %></th>
        <td><%= form.text_field :phone, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :email %></th>
        <td><%= form.text_field :email, class: "form-control" %></td>
      </tr>
    </table>

    <div class="buttons d-flex justify-content-start">
      <%= form.button type: :submit, class: "btn btn-primary me-3" do %>
        <i class="fas fa-sync-alt me-2"></i>Update Employee
      <% end %>
      <%= link_to employee_path(@employee), class: "btn btn-secondary me-3" do %>
        <i class="fa fa-eye me-2"></i>Show
      <% end %>
      <%= link_to employees_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-reply me-2"></i>Back
      <% end %>
    </div>
  <% end %>
</div>
