<div class="container">
  <h1 class="text-center">Order Statuses</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @order_statuses.each do |order_status| %>
      <tr>
        <td><%= order_status.name %></td>
        <td>
          <%= link_to order_status_path(order_status), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>Show
          <% end %>
          <%= link_to edit_order_status_path(order_status), class: "btn btn-warning" do %>
            <i class="fa fa-pencil"></i>Edit
          <% end %>
          <%= link_to order_status_path(order_status), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_order_status_path, class: "btn btn-success" do %>
    <i class="fas fa-plus-circle"></i>New Order Status
  <% end %>
</div>
