<div class="container">
  <h1 class="text-center">Orders</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Restaurant</th>
      <th>Customer</th>
      <th>Order Status</th>
      <th>Restaurant Rating</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.restaurant.name %></td>
        <td><%= order.customer.id %></td>
        <td><%= order.order_status.name %></td>
        <td><%= order.restaurant_rating %></td>
        <td>
          <%= link_to order_path(order), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>Show
          <% end %>
          <%= link_to edit_order_path(order), class: "btn btn-warning" do %>
            <i class="fa fa-pencil"></i>Edit
          <% end %>
          <%= link_to order_path(order), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_order_path, class: "btn btn-success" do %>
    <i class="fas fa-plus-circle"></i>New Order
  <% end %>
</div>
