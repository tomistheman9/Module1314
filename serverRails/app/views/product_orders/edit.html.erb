<div class="container">
  <h1 class="text-center">Edit Product Order</h1>
  <%= form_with model: @product_order, url: product_order_path(@product_order), method: :patch do |form| %>
    <table class="table table-bordered">
      <tr>
        <th><%= form.label :product_id %></th>
        <td><%= form.collection_select :product_id, Product.all, :id, :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :order_id %></th>
        <td><%= form.collection_select :order_id, Order.all, :id, :id, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :product_quantity %></th>
        <td><%= form.number_field :product_quantity, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :product_unit_cost %></th>
        <td><%= form.number_field :product_unit_cost, class: "form-control" %></td>
      </tr>
    </table>

    <div class="buttons d-flex justify-content-start">
      <%= form.button type: :submit, class: "btn btn-primary me-3" do %>
        <i class="fas fa-sync-alt me-2"></i>Update Product Order
      <% end %>
      <%= link_to product_order_path(@product_order), class: "btn btn-secondary me-3" do %>
        <i class="fa fa-eye me-2"></i>Show
      <% end %>
      <%= link_to product_orders_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-reply me-2"></i>Back
      <% end %>
    </div>
  <% end %>
</div>
