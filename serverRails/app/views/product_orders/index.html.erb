<div class="container">
  <h1 class="text-center">Product Orders</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Product</th>
      <th>Order</th>
      <th>Product Quantity</th>
      <th>Product Unit Cost</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= product_order.product.name %></td>
        <td><%= product_order.order.id %></td>
        <td><%= product_order.product_quantity %></td>
        <td><%= product_order.product_unit_cost %></td>
        <td>
          <%= link_to product_order_path(product_order), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>Show
          <% end %>
          <%= link_to edit_product_order_path(product_order), class: "btn btn-warning" do %>
            <i class="fa fa-pencil"></i>Edit
          <% end %>
          <%= link_to product_order_path(product_order), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_product_order_path, class: "btn btn-success" do %>
    <i class="fas fa-plus-circle"></i>New Product Order
  <% end %>
</div>
