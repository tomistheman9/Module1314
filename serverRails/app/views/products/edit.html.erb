<div class="container">
  <h1 class="text-center">Edit <%= @product.name %></h1>
  <%= form_with model: @product, url: product_path(@product), method: :patch do |form| %>
    <table class="table table-bordered">
      <tr>
        <th><%= form.label :restaurant_id %></th>
        <td><%= form.collection_select :restaurant_id, Restaurant.all, :id, :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :name %></th>
        <td><%= form.text_field :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :description %></th>
        <td><%= form.text_field :description, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :cost %></th>
        <td><%= form.number_field :cost, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :price_range %></th>
        <td><%= form.number_field :price_range, class: "form-control" %></td>
      </tr>
    </table>

    <div class="buttons d-flex justify-content-start">
      <%= form.button type: :submit, class: "btn btn-primary me-3" do %>
        <i class="fas fa-sync-alt me-2"></i>Update Product
      <% end %>
      <%= link_to product_path(@product), class: "btn btn-secondary me-3" do %>
        <i class="fa fa-eye me-2"></i>Show
      <% end %>
      <%= link_to products_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-reply me-2"></i>Back
      <% end %>
    </div>
  <% end %>
</div>
