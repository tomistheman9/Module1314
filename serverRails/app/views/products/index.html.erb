<div class="container">
  <h1 class="text-center">Products</h1>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.restaurant.name %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.cost %></td>
        <td>
          <%= link_to product_path(product), class: "btn btn-primary" do %>
            <i class="fa fa-eye"></i>Show
          <% end %>
          <%= link_to edit_product_path(product), class: "btn btn-warning" do %>
            <i class="fa fa-pencil"></i>Edit
          <% end %>
          <%= link_to product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_product_path, class: "btn btn-success" do %>
    <i class="fas fa-plus-circle"></i>New Product
  <% end %>
</div>
