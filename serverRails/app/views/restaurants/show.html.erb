<div class="container">
  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <td><%= @restaurant.name %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= @restaurant.phone %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @restaurant.email %></td>
    </tr>
    <tr>
      <th>Price Range</th>
      <td><%= @restaurant.price_range %></td>
    </tr>
    <tr>
      <th>Active</th>
      <td><%= @restaurant.active ? 'Yes' : 'No' %></td>
    </tr>
  </table>

  <div class="buttons">
    <%= link_to edit_restaurant_path(@restaurant), class: "btn btn-primary" do %>
      <i class="fa fa-pencil"></i>Edit
    <% end %>
    |
    <%= link_to restaurants_path, class: "btn btn-secondary" do %>
      <i class="fa-solid fa-reply"></i>Back
    <% end %>
  </div>
</div>
