<div class="container">
  <h1 class="text-center">Edit <%= @user.name %></h1>
  <%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
    <table class="table table-bordered">
      <tr>
        <th><%= form.label :name %></th>
        <td><%= form.text_field :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :email %></th>
        <td><%= form.text_field :email, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :password %></th>
        <td><%= form.password_field :password, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= form.label :password_confirmation %></th>
        <td><%= form.password_field :password_confirmation, class: "form-control" %></td>
      </tr>
    </table>

    <div class="buttons d-flex justify-content-start">
      <%= form.button type: :submit, class: "btn btn-primary me-3" do %>
        <i class="fas fa-sync-alt me-2"></i>Update User
      <% end %>
      <%= link_to user_path(@user), class: "btn btn-secondary me-3" do %>
        <i class="fa fa-eye me-2"></i>Show
      <% end %>
      <%= link_to users_path, class: "btn btn-secondary" do %>
        <i class="fa-solid fa-reply me-2"></i>Back
      <% end %>
    </div>
  <% end %>
</div>
